<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fragment_accessories"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="2dp"
    tools:context="sakkhat.com.p250.fragments.FragmentAccessories">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Switch
                android:id="@+id/frag_access_night_mood_switch"
                android:textOn="On"
                android:textOff="Off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"/>
            <SeekBar
                android:id="@+id/frag_access_night_mood_bar"
                android:layout_toRightOf="@id/frag_access_night_mood_switch"
                android:layout_width="match_parent"
                android:paddingTop="1dp"
                android:paddingRight="2dp"
                android:saveEnabled="true"
                android:visibility="gone"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/jarvis"
    android:id="@+id/activity_file_sharing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context="sakkhat.com.p250.p2p.FileSharing">

    <android.support.v7.widget.CardView
        android:id="@+id/file_share_head_card"
        app:cardBackgroundColor="@color/darkGreen"
        app:cardCornerRadius="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/file_share_remote_dname"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="Connected: Samsung Galaxy S3"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>

    <ListView
        android:id="@+id/file_share_list"
        android:layout_below="@id/file_share_head_card"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="8.2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            app:cardBackgroundColor="@color/darkGreen"
            app:cardCornerRadius="15dp"
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/file_share_select_file"
                android:text="Select File"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="18dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:textColor="@color/white"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/file_share_sent_file"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="@color/darkGreen"
            android:layout_weight="1.8"
            android:layout_marginLeft="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_sent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.CardView>
    </LinearLayout>
</RelativeLayout>
